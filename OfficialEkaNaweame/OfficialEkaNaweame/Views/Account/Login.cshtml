@using OfficialEkaNaweame.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<!-- Css Login -->
<link rel="stylesheet" type="text/css" href="~/Content/css/login.css">


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Iniciar Sesión</h5>
                        <div class="form-signin">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-label-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "inputEmail", placeholder = "Correo electrónico" })
                                <label for="inputEmail">Correo electrónico</label>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-label-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "inputPassword", placeholder = "Contraseña" })
                                <label for="inputPassword">Contraseña</label>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", id = "customCheck1" })
                                @Html.LabelFor(m => m.RememberMe, new { @for = "customCheck1", @class = "custom-control-label" })
                            </div>

                            <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Iniciar Sesión</button>

                            <hr class="my-4">
                            <div class="text-center">
                                @Html.ActionLink("Crea una cuenta", "Register", "Account", null, new { @class = "btn btn-lg btn-google btn-block text-uppercase" })
                                @Html.ActionLink("¿Olvidaste tu contraseña?", "Register", "Account", null, new { @class = "btn btn-lg btn-facebook btn-block text-uppercase" })
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
        <p>
            @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
        </p>*@
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}