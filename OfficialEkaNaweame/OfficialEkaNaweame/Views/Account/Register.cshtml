@model OfficialEkaNaweame.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

    <link rel="stylesheet" type="text/css" href="~/Content/css/login.css">

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Crear una cuenta</h5>
                        <div class="form-signin">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-label-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "inputEmail", placeholder = "Correo electrónico" })
                                <label for="inputEmail">Correo electrónico</label>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-label-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "inputPassword", placeholder = "Contraseña" })
                                <label for="inputPassword">Contraseña</label>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-label-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "inputConPassword", placeholder = "Confirmar Contraseña" })
                                <label for="inputConPassword">Confirmar Contraseña</label>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Registrarse</button>

                            <hr class="my-4">
                            <div class="text-center">
                                @Html.ActionLink("Inicia Sesión", "Login", "Account", null, new { @class = "btn btn-lg btn-google btn-block text-uppercase" })
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


